<!DOCTYPE html>
<html>
  <head>
  
    <title>InstructablesClone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script src="https://kit.fontawesome.com/df63dd5d45.js" crossorigin="anonymous"></script>
    <% if current_user %>
      <script>
        window.currentUser = { 
          "id": <%= current_user.id %>,
          "email": "<%= current_user.email %>"
          };
      </script>
    <% end %>

    
      <script type="text/javascript">
        window.logoURL = "<%= image_url('robot.png') %>";
      </script>
      
      <script type="text/javascript">
        window.feature = "<%= image_url('splash-pic.jpg') %>";
      </script>

      <script type="text/javascript">
        window.header = "<%= image_url('project-header.jpg') %>";
      </script>

      <script type="text/javascript">
        window.test1 = "<%= image_url('testimonial1.jpg') %>";
      </script>

      <script type="text/javascript">
        window.test2 = "<%= image_url('testimonial2.jpg') %>";
      </script>

      <script type="text/javascript">
        window.test3 = "<%= image_url('testimonial3.jpg') %>";
      </script>

      <script type="text/javascript">
        window.banner = "<%= image_url('instructables-banner.png') %>";
      </script>

      <script type="text/javascript">
        window.projectImg = "<%= image_url('unhappy-potato.jpg') %>";
      </script>


  </head>

  <body>
    <%= yield %>
  </body>
</html>
